@model IEnumerable<HomeLibrary.Models.BookTypeGorup>
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">Home LIbrary Statistics</h3>
<p>Right now in Home Library database:</p>

<table class="table table-striped table-hover">
    <tr class="info text-info">
        <th>
            Book type
        </th>
        <th>
            Number of books
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookType) book
            </td>
            <td>
                @item.BookCount books
            </td>
        </tr>
    }
</table>
