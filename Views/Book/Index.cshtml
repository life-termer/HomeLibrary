@model PagedList.IPagedList<HomeLibrary.Models.Book>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Books</h2>
<div class="row">
    <div class="col-md-10">
        @using (Html.BeginForm("Index", "Book", FormMethod.Get))
        {
            <p>
                Find by title or author: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
                <input type="submit" value="Search" class="btn btn-info btn-sm" />
                @Html.ActionLink("Show all", "Index", "Book", new { area = "" }, new { @class = "btn btn-info btn-sm" })
            </p>
        }
    </div>
    <div class="col-md-2">
        @if ((string)this.Session["userrole"] == "Admin")
        {
            @Html.ActionLink("Create New", "Create", new { area = "" }, new { @class = "btn btn-info" })
        }
    </div>
</div>

<table class="table table-striped table-hover">
    <tr class="info text-info">
        <th>
            <u>@Html.ActionLink("Title", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter }, new { @class = "text-info " })</u>
        </th>
        <th>
            Author
        </th>
        <th>
            Genre
        </th>
        
        <th>
            Language
        </th>
        <th>
            <u>@Html.ActionLink("Publication date", "Index", new { sortOrder = ViewBag.DateSortParm, currentFilter = ViewBag.CurrentFilter }, new { @class = "text-info" })</u>
</th>
        <th>
            <u>@Html.ActionLink("Length", "Index", new { sortOrder = ViewBag.LenghtSortParam, currentFilter = ViewBag.CurrentFilter }, new { @class = "text-info" })</u>
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Language)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublicDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Length) pages
            </td>
            <td>
                @if ((string)this.Session["userrole"] == "Admin")
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-info btn-xs" }) @: |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-info btn-xs" }) @: |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger btn-xs" })
                }
                else
                {
                    @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-info btn-sm" })
                }
            </td>
        </tr>
    }

</table>
<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
